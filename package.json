{
    "name": "electron-react-typescript-boilerplate",
    "version": "1.0.0",
    "main": "./dist/main.js",
    "author": "daihy",
    "scripts": {
        "start-renderer-dev": "webpack-dev-server --config webpack/webpack.renderer.dev.config.js",
        "start-main-dev": "webpack --config webpack/webpack.main.config.js && electron ./dist/main.js",
        "dev": "cross-env START_HOT=1 npm run start-renderer-dev",
        "build-main": "webpack --config webpack/webpack.main.prod.config.js",
        "build-renderer": "webpack --config webpack/webpack.renderer.prod.config.js",
        "build-all": "npm run build-main && npm run build-renderer",
        "build-analyzer": "cross-env analyzer=1 npm run build-renderer",
        "clean": "rimraf dist && rimraf build",
        "build": "npm run clean && npm run build-all && electron-builder",
        "lint:fix": "prettier --ext .ts,.tsx,.less --write src/**/*"
    },
    "build": {
        "appId": "com.xx",
        "productName": "xx",
        "compression": "maximum",
        "copyright": "Copyright Â© 2020",
        "directories": {
            "output": "build",
            "buildResources": "resources"
        },
        "files": [
            "dist/**/*",
            "!node_modules"
        ],
        "win": {
            "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        }
    },
    "dependencies": {
        "@ant-design/icons": "^4.0.6",
        "antd": "^4.1.2",
        "axios": "^0.19.2",
        "classnames": "^2.2.6",
        "electron-store": "^5.1.1",
        "frameless-titlebar": "^2.0.0",
        "lodash": "^4.17.15",
        "mobx": "^5.15.4",
        "mobx-react-lite": "^2.0.6",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "react-router-dom": "^5.1.2"
    },
    "devDependencies": {
        "@babel/core": "^7.9.0",
        "@babel/plugin-proposal-class-properties": "^7.8.3",
        "@babel/plugin-proposal-decorators": "^7.8.3",
        "@babel/plugin-syntax-dynamic-import": "^7.8.3",
        "@babel/preset-react": "^7.9.4",
        "@babel/preset-typescript": "^7.9.0",
        "@hot-loader/react-dom": "^16.13.0",
        "@types/lodash": "^4.14.149",
        "@types/react": "^16.9.34",
        "@types/react-dom": "^16.9.6",
        "@types/react-router-dom": "^5.1.4",
        "@typescript-eslint/eslint-plugin": "^2.27.0",
        "@typescript-eslint/parser": "^2.27.0",
        "babel-loader": "^8.1.0",
        "babel-plugin-import": "^1.13.0",
        "cross-env": "^7.0.2",
        "css-loader": "^3.5.2",
        "electron": "^8.2.1",
        "electron-builder": "^22.4.1",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.10.1",
        "eslint-loader": "^4.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-react": "^7.19.0",
        "eslint-plugin-react-hooks": "^3.0.0",
        "file-loader": "^6.0.0",
        "html-webpack-plugin": "^4.2.0",
        "image-webpack-loader": "^6.0.0",
        "less": "^3.11.1",
        "less-loader": "^5.0.0",
        "mini-css-extract-plugin": "^0.9.0",
        "native-ext-loader": "^2.3.0",
        "optimize-css-assets-webpack-plugin": "^5.0.3",
        "prettier": "^2.0.4",
        "react-hot-loader": "^4.12.20",
        "rimraf": "^3.0.2",
        "style-loader": "^1.1.3",
        "typescript": "^3.8.3",
        "webpack": "^4.42.1",
        "webpack-bundle-analyzer": "^3.6.1",
        "webpack-cli": "^3.3.11",
        "webpack-dev-server": "^3.10.3",
        "webpack-merge": "^4.2.2"
    }
}
